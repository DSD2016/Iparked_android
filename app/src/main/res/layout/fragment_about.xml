<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dsd2016.iparked_android.fragments.MyAboutFragment"
    android:id="@+id/root_layout">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_delete"
            android:layout_weight="1" />

        <Button
            android:text="Insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_insert"
            android:layout_weight="1" />

        <Button
            android:text="Read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_read"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="Made By Jedi Masters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:gravity="center" />

    <android.support.design.widget.FloatingActionButton
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:fabSize="normal"
        android:src="@drawable/menu"
        android:layout_gravity="bottom|right"
        app:backgroundTint="?attr/actionModeSplitBackground"
        android:id="@+id/fab"
        app:srcCompat="@drawable/menu">

    </android.support.design.widget.FloatingActionButton>

    <com.dsd2016.iparked_android.myClasses.ClipRevealFrame
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tumblr_primary"
        android:visibility="invisible"
        >

        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@+id/arc_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:arc_axisRadius="@dimen/layout_child_offset_tumblr"
            app:arc_origin="center"
            app:arc_radius="@dimen/layout_radius_tumblr"
            >

            <ImageButton
                style="@style/Item.Tumblr"
                android:background="@drawable/tumblr_orange_oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pair"
                android:tag="pair" />

            <ImageButton
                style="@style/Item.Tumblr"
                android:background="@drawable/tumblr_green_oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/about"
                android:tag="about" />

            <ImageButton
                style="@style/Item.Tumblr"
                android:background="@drawable/tumblr_white_oval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/settings"
                android:tag="settings" />


        </com.ogaclejapan.arclayout.ArcLayout>

        <ImageButton
            android:id="@+id/center_item"
            style="@style/Item.Tumblr"
            android:layout_gravity="center"
            android:background="@drawable/tumblr_red_oval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/find"
            android:tag="find" />

    </com.dsd2016.iparked_android.myClasses.ClipRevealFrame>

</FrameLayout>
